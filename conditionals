//example of conditionals//

  let age = prompt("How old are you?")
  age = parseInt(age)

  if (age >= 18) {
    console.log("Permission allowed");
  } else {
    console.log("Permission denied");
  }

//another example of conditionals including a var which receives a true value//
  let age = prompt("How old are you?")
  age = parseInt(age)
  accompanied == true

  if (age >= 18) {
    console.log("Permission allowed");
  } else if (accompanied) {
    console.log("Permission allowed, because is accompanied");
  }
    else {
    console.log("Permission denied");
  }


