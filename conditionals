10 > 5
//prints 'true'
10 < 5
//prints 'false'
10 == '10'
//prints 'true'
10 === 10
//prints 'true', but the following... //
10 === '10'
//prints 'false'

//&& stands for 'AND'//
10 > 5 && 10 > 6
//prints 'true', but...//
10 > 5 && 10 > 20
//prints 'false'//

// || stands for 'OR'//
10 > 5 || 10 > 6
//prints 'true' and also...//
10 > 5 || 10 > 20
//prints 'true', but...//
10 > 11 || 10 > 20
//prints 'false'//

//the exclamation sign '!' turns true to false and false to true//
true == true //but, the following...//
!true == false

